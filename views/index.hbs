<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css"> <!-- Update the path to your stylesheet -->
    <title>Random Quote</title>
</head>
<body>
    <nav>
        <h4>Quote's</h4>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/login">Login</a></li>
            <li><a href="/register">Register</a></li> 
        </ul>
    </nav>

    <div class="container mt-4">
        <div class="bhagavad-gita-container">
            <h2> The Quote will be updated every 20 seconds</h2>
            <p> ****************************************************</p>
            <p id="sloka">Loading...</p>
        </div>
    </div>

    <!-- Script -->
   <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
   <script>
    // Function to fetch and update Bhagavad Gita sloka every 30 seconds
    function updateSloka() {
        fetch('https://api.quotable.io/random')
            .then(response => response.json())
            .then(data => {
                // Assuming the API response has a 'content' property for the quote and 'author' for the author
                document.getElementById('sloka').innerText = `"${data.content}" - ${data.author}`;
            })
            .catch(error => console.error('Error fetching sloka:', error));
    }

    // Update the sloka immediately
    updateSloka();

    // Update the sloka every 20 seconds
    setInterval(updateSloka, 20000);
</script>
</body>
</html>
